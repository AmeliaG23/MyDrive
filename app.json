{
  "expo": {
    "name": "MyDrive",
    "slug": "myDriveApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/aviva-logo.png",
    "userInterfaceStyle": "light",
    "scheme": "mydriveapp",
    "splash": {
      "image": "./assets/aviva-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app tracks your location in the background to provide driving analysis.",
          "locationWhenInUsePermission": "This app uses your location to track your journeys."
        }
      ],
      "expo-dev-client"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "location",
          "fetch"
        ],
        "NSLocationWhenInUseUsageDescription": "This app uses your location to track your journeys.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app tracks your location in the background to provide driving analysis.",
        "NSLocationAlwaysUsageDescription": "This app requires background location access to track journeys even when the app is closed."
      },
      "bundleIdentifier": "com.anonymous.myDriveApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/aviva-logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.myDriveApp"
    },
    "web": {
      "favicon": "./assets/aviva-logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "8173ba57-2c6b-4b47-af43-76f27a06ae81"
      }
    }
  }
}
